def atoi(text):
    return int(text) if text.isdigit() else text
def natural_keys(text):
    return [ atoi(c) for c in re.split('(\d+)',text) ]



inputFolder = 'YeastSeq'

files = os.listdir('/Users/txu7/Desktop/igc_research/approach3/' + inputFolder)
files = ['/Users/txu7/Desktop/igc_research/approach3/' + inputFolder + '/' + file for file in files if 'fasta' in file]
files.sort(key=natural_keys)
alignment_file_list = files
